<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/label_enabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enabled"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Me!"
        app:layout_constraintTop_toBottomOf="@id/label_enabled"/>

    <TextView
        android:id="@+id/label_disabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Disabled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_enabled"/>

    <Button
        android:id="@+id/button_disabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Click Me!"
        app:layout_constraintTop_toBottomOf="@id/label_disabled"/>

</androidx.constraintlayout.widget.ConstraintLayout>